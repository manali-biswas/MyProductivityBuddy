<%-include("partials/header.ejs")%>
<link rel="stylesheet" href="/stylesheets/google.css">
<!-- Main Container -->
<div class="container">
<div class="container all">    
<h1>Events <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-calendar-day-fill text-primary" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4V.5zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2zm-4.785-6.145a.425.425 0 0 1-.43-.425c0-.242.192-.43.43-.43a.428.428 0 1 1 0 .855zm.336.563v4.105h-.672V8.418h.672zm-6.867 4.105v-2.3h2.261v-.61H4.684V7.801h2.464v-.61H4v5.332h.684zm3.296 0h.676V9.98c0-.554.227-1.007.953-1.007.125 0 .258.004.329.015v-.613a1.806 1.806 0 0 0-.254-.02c-.582 0-.891.32-1.012.567h-.02v-.504H7.98v4.105z"/>
  </svg> </h1>
<br>
<a class="btn btn-primary" href="/google">Google Calendar</a>
<br>

<!--Calendar Container-->
<div class="container small">
    <div class="row" style="justify-content: space-around;">
    <div class="dropdown">
        <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Select Calendar View
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#day">Day</a>
          <a class="dropdown-item" href="#week">Week</a>
          <a class="dropdown-item" href="#month">Month</a>
          <a class="dropdown-item" href="#year">Year</a>
          <a class="dropdown-item" href="#decade">Decade</a>
        </div>
      </div>
      <!--Buttons to change calendar view dates-->
      <div class="btn-group" role="group" >
          <button class="btn btn-outline-dark dec" type="button">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-left-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M3.86 8.753l5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/>
              </svg>
            </button>
            <button class="btn btn-outline-dark inc" type="button">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-right-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12.14 8.753l-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
                  </svg>
            </button>
      </div>
    </div>

<br>
    
<!-- Different calendar views -->
<div id="day" class="d"></div>
<div id="week" class="n"></div>
<div id="month" class="n"></div>
<div id="year" class="n"></div>
<div id="decade" class="n"></div>
</div>
<hr>
<br>
<!-- Form to add an event to calendar for the user -->
<p>Add an event</p>
<form class="form" method="POST" action="/events">
<div class="form-group">
    <label for="title" >Event Name</label>
    <input type="text" id="title" name="title" class="form-control" placeholder="Event 1" required>    
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" id="date" name="date" class="form-control" required>    
  </div>
  <div class="form-group">
    <label for="start">Start Time</label>
    <input type="time" id="start" name="start" class="form-control">    
  </div>
  <div class="form-group">
    <label for="end">End Time</label>
    <input type="time" id="end" name="end" class="form-control">    
  </div>
  <div class="form-group">
    <label for="repeat">Repeat</label>
    <select class="form-control" id="repeat" name="repeat">
      <option value="false">Does not repeat</option>
      <option value="daily">Every Day</option>
      <option value="weekly">Every Week</option>
      <option value="monthly">Every Month</option>
      <option value="yearly">Every Year</option>
    </select>
  </div>
  <br>
    <button type='submit' class='btn btn-dark save'>Save Event</button>
  </form>
</div>
</div>
<script src="../logic/events.js"></script>
<%-include("partials/footer.ejs")%>