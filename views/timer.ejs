<%-include("partials/header.ejs")%>
<link rel="stylesheet" href="/stylesheets/timer.css">
<div class="container">
<a href="/">
    <span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>
<div class="container all">
    
<h1>Timer</h1>
<p>Select the countdown timing</p>
<div class="custom-control custom-radio">
    <label class="custom-control-label" for="hours">Hours</label>
    <input type="number" id="hours" name="hours" class="custom-control-input" min="00" max="23" placeholder="0">    
  </div>
  <div class="custom-control custom-radio">
    <label class="custom-control-label" for="minutes">Minutes</label>
    <input type="number" id="minutes" name="minutes" class="custom-control-input" min="00" max="59" placeholder="0">
    
  </div>
  <div class="custom-control custom-radio">
    <label class="custom-control-label" for="seconds">Seconds</label>
    <input type="number" id="seconds" name="seconds" class="custom-control-input" min="00" max="59" placeholder="0">    
  </div>
  <br>
  <button class="btn btn-primary start">Start</button>  
  <p id="timeleft"></p>
  <p id="timeup"></p>
</div>
</div>
<script src="/logic/timer.js"></script>
<%-include("partials/footer.ejs")%>